{
  "name": "list-findings",
  "version": "0.1.0",
  "private": true,
  "description": "GitHub Action which lists the findings using GitHub Checks API",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint '**/*.ts' --fix",
    "pack": "ncc build -m",
    "test": "jest",
    "format": "prettier --write '**/*.js' '**/*.ts'",
    "all": "npm run build && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeIntelligenceTesting/github-actions"
  },
  "keywords": [
    "github",
    "actions",
    "checks"
  ],
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "@octokit/rest": "^18.0.5",
    "@types/node-fetch": "^2.5.12",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@types/node": "^14.6.4",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "@vercel/ncc": "^0.24.0",
    "eslint": "^7.32.0",
    "eslint-config-google": "^0.14.0",
    "typescript": "^4.0.2"
  }
}
